extends layout
block content
     .dynamic-content-container
      .form-details
        h2 Sign In
        div input your credentials to get signed in.
      form.sign_up_form(action='',method="post")
        div
          label(for='') Enter Your UserName
          input(type='text', placeholder='UserName', name='username')
        div
          label(for='') Enter Your Password
          input(type='password', placeholder='password', name='password')
        button.submit_btn(type ="submit") Submit
      if errors
       ul.error-msg
        for error in errors
           li!= error.msg
      if error_msg
        div.error-msg #{error_msg}