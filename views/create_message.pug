extends layout
block content
  if !user
   h1 Log in to send message
  else
    main
      section.form-container 
        h1.form-text Create a message
        form(action='',method="post")
          div
            label(for='') Enter Title here
            input(type='text', placeholder='Title', name='title' value=(undefined===message ? '' : message.title))
          div
            label(for='') Enter Message
            input(type='text', placeholder='Message', name='message' value=(undefined===message ? '' : message.message))
            input(type='hidden', name='user_details' value=(user_details))
          button.action-btn(type='submit') Post Message
      if errors
       ul.error-msg
        for error in errors
           li!= error.msg
